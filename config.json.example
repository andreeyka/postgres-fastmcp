{
    "server": {
        "host": "0.0.0.0",
        "port": 8000,
        "transport": "http",
        "endpoint": "mcp",
        "workers": 1,
        "deprecation_warnings": true,
        "health_endpoint_enabled": true
    },
    "fastmcp": {
        "server_name": "postgres-fastmcp",
        "mask_error_details": true,
        "return_errors_as_strings": true,
        "error_traceback_in_strings": false,
        "error_handling": {
            "enabled": true,
            "include_traceback": false,
            "transform_errors": true
        },
        "retry": {
            "enabled": true,
            "max_retries": 3,
            "base_delay": 1.0,
            "max_delay": 60.0,
            "backoff_multiplier": 2.0
        },
        "caching": {
            "enabled": true,
            "use_redis": false,
            "max_item_size": 1048576,
            "call_tool_ttl": 300,
            "read_resource_ttl": 300,
            "get_prompt_ttl": 300,
            "excluded_tools": []
        },
        "logging_middleware": {
            "enabled": false,
            "log_level": "INFO",
            "include_payloads": false,
            "include_payload_length": true,
            "estimate_payload_tokens": false
        },
        "timing": {
            "enabled": false,
            "log_level": "INFO"
        },
        "detailed_timing": {
            "enabled": false,
            "log_level": "INFO"
        }
    },
    "databases": {
        "app1": {
            "database_uri": "postgresql://user:password@localhost:5432/database1",
            "transport": "streamable-http",
            "role": "full",
            "access_mode": "restricted",
            "endpoint": false
        },
        "app2": {
            "database_uri": "postgresql://user:password@localhost:5432/database2",
            "transport": "streamable-http",
            "role": "full",
            "access_mode": "restricted",
            "endpoint": true
        }
    }
}